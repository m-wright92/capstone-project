<% if @friend_requests.any? %>
  <h1>Friend Requests</h1>
  <ul>
    <% @friend_requests.each do |friend_request| %>
      <li>
        <%= friend_request.user.full_name %>
        <%= button_to "Accept", user_accept_friend_path(@user, friend_request.user), params: {user_id: @user.id, friend_id: friend_request.user.id} %>
        <%= button_to "Decline", user_decline_friend_path(@user, friend_request.user), params: {user_id: @user.id, friend_id: friend_request.user.id} %>
      </li>
    <% end %>
  </ul>
<% end %>